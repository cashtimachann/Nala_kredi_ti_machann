{
  "AppSettings": {
    "Version": "1.0.6",
    "ApplicationName": "Nala Kredi Ti Machann Desktop",
    "Environment": "Development"
  },
  "ApiSettings": {
    "BaseUrl": "https://branch.nalakreditimachann.com/api",
    "Timeout": 30,
    "RetryAttempts": 3,
    "RetryDelay": 2
  },
  "UpdateSettings": {
    "CheckOnStartup": true,
    "CheckInterval": 86400,
    "UpdateUrl": "https://admin.nalakreditimachann.com/downloads/version.json",
    "AutoDownload": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Enabled": true,
      "Path": "%LOCALAPPDATA%\\NalaCreditDesktop\\Logs",
      "MaxFiles": 10
    }
  }
}
