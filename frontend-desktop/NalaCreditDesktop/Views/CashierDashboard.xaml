<Window x:Class="NalaCreditDesktop.Views.CashierDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:NalaCreditDesktop.Converters"
    xmlns:views="clr-namespace:NalaCreditDesktop.Views"
        Title="Dashboard Caissier - Nala Kredi Ti Machann" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Convertisseurs -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
        <!-- Styles personnalisÃ©s -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F8F9FA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4A90E2" Offset="0"/>
                        <GradientStop Color="#357ABD" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#357ABD" Offset="0"/>
                                            <GradientStop Color="#2C5AA0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2C5AA0" Offset="0"/>
                                            <GradientStop Color="#1E3F73" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        
        <Style x:Key="CurrencyHTGStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="Foreground" Value="#27AE60"/>
        </Style>
        
        <Style x:Key="CurrencyUSDStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="Foreground" Value="#3498DB"/>
        </Style>
        
        <Style x:Key="AlertWarningStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="BorderBrush" Value="#FFC107"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="AlertCriticalStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8D7DA"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte avec actions rapides -->
        <Border Grid.Row="0" Padding="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Titre et informations session -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Dashboard Caissier" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding CashierName}" 
                                   Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text=" â€¢ " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text="{Binding SessionStartTime, StringFormat='Ouvert Ã  {0:HH:mm}'}" 
                                   Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text=" â€¢ " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text="{Binding CurrentTime, StringFormat='Maintenant: {0:HH:mm:ss}'}" 
                                   Foreground="#BDC3C7" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- Statut de session -->
                <Border Grid.Column="1" 
                        Background="{Binding SessionStatusColor}" 
                        CornerRadius="20" 
                        Padding="15,8" 
                        Margin="20,0">
                    <TextBlock Text="{Binding SessionStatusText}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                </Border>

                <!-- Actions rapides -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource ActionButtonStyle}" 
                            Click="OpenQuickDeposit_Click"
                            IsEnabled="{Binding IsCashSessionOpen}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="DÃ©pÃ´t"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Background="#16A085"
                            Click="OpenRecouvrement_Click"
                            IsEnabled="{Binding IsCashSessionOpen}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¥" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Recouvrement"/>
                        </StackPanel>
                    </Button>
                    
                        <Button Style="{StaticResource ActionButtonStyle}" 
                            Click="OpenQuickWithdrawal_Click"
                            IsEnabled="{Binding IsCashSessionOpen}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž–" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Retrait"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ActionButtonStyle}" 
                            Command="{Binding ExchangeOperationCommand}"
                            IsEnabled="{Binding IsCashSessionOpen}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Change"/>
                        </StackPanel>
                    </Button>
                    
                        <Button Style="{StaticResource ActionButtonStyle}" 
                            Background="#9B59B6"
                            Command="{Binding ToggleTransactionModuleCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TransactionModuleToggleLabel}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ActionButtonStyle}" 
                            Background="#E74C3C"
                            Command="{Binding CloseCashierCommand}"
                            IsEnabled="{Binding IsCashSessionOpen}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”’" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="ClÃ´ture"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ActionButtonStyle}" 
                            Background="#95A5A6"
                            Click="Logout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸšª" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Dekonekte"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Alertes -->
                <StackPanel Grid.Row="0" x:Name="AlertsPanel">
                    <!-- Message session fermÃ©e - Manager seulement -->
                    <Border Background="#FFF3E0" 
                            BorderBrush="#FF9800" 
                            BorderThickness="2" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="5"
                            x:Name="SessionClosedAlert">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SessionStatusText}" Value="CAISSE FERMÃ‰E">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="â„¹ï¸" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="La session de caisse est fermÃ©e. Veuillez contacter votre chef de succursale pour ouvrir une nouvelle session." 
                                       FontWeight="SemiBold" 
                                       Foreground="#E65100"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Alerte warning -->
                    <Border Style="{StaticResource AlertWarningStyle}" 
                            Visibility="{Binding HasWarningAlerts, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding WarningMessage}" FontWeight="SemiBold" Foreground="#856404"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Alerte critique -->
                    <Border Style="{StaticResource AlertCriticalStyle}" 
                            Visibility="{Binding HasCriticalAlerts, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸš¨" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding CriticalMessage}" FontWeight="SemiBold" Foreground="#721C24"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- PremiÃ¨re ligne : Soldes et RÃ©sumÃ© du Jour -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Suivi soldes caisse -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Soldes de Caisse" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <!-- Soldes actuels -->
                            <Grid Margin="0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- HTG -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ðŸ‡­ðŸ‡¹ HTG:" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="16"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding CurrentBalanceHTG, StringFormat='{}{0:N0}'}" 
                                           Style="{StaticResource CurrencyHTGStyle}" 
                                           HorizontalAlignment="Right" FontSize="18"/>

                                <!-- USD -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="ðŸ‡ºðŸ‡¸ USD:" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="16"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding CurrentBalanceUSD, StringFormat='${0:N2}'}" 
                                           Style="{StaticResource CurrencyUSDStyle}" 
                                           HorizontalAlignment="Right" FontSize="18"/>

                                <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10"/>

                                <!-- DÃ©tails -->
                                <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Solde d'ouverture HTG:"/>
                                        <TextBlock Grid.Column="1" Text="{Binding OpeningBalanceHTG, StringFormat='{}{0:N0}'}" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Solde d'ouverture USD:"/>
                                        <TextBlock Grid.Column="1" Text="{Binding OpeningBalanceUSD, StringFormat='${0:N2}'}" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total entrÃ©es:"/>
                                        <TextBlock Grid.Column="1" Text="{Binding TotalIncoming, StringFormat='{}{0:N0}'}" Foreground="#27AE60" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total sorties:"/>
                                        <TextBlock Grid.Column="1" Text="{Binding TotalOutgoing, StringFormat='{}{0:N0}'}" Foreground="#E74C3C" FontWeight="SemiBold"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Indicateur d'Ã©quilibre -->
                            <Border Background="{Binding BalanceIndicatorColor}" 
                                    CornerRadius="5" 
                                    Padding="10" 
                                    Margin="0,10,0,0">
                                <TextBlock Text="{Binding BalanceIndicatorText}" 
                                           Foreground="White" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- RÃ©sumÃ© du Jour -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š RÃ©sumÃ© du Jour" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- DÃ©pÃ´ts -->
                                <Border Grid.Column="0" Margin="0,0,10,0" Background="#D4EDDA" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’µ DÃ©pÃ´ts" FontWeight="Bold" Foreground="#155724" Margin="0,0,0,10" FontSize="16"/>
                                        <TextBlock Text="{Binding DepositsCount, StringFormat='Nombre: {0}'}" FontSize="14" Foreground="#155724"/>
                                        <TextBlock Text="{Binding DepositsAmountHTG, StringFormat='HTG: {0:N0}'}" FontSize="14" Foreground="#155724" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DepositsAmountUSD, StringFormat='USD: ${0:N2}'}" FontSize="14" Foreground="#155724" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <!-- Retraits -->
                                <Border Grid.Column="1" Background="#F8D7DA" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¸ Retraits" FontWeight="Bold" Foreground="#721C24" Margin="0,0,0,10" FontSize="16"/>
                                        <TextBlock Text="{Binding WithdrawalsCount, StringFormat='Nombre: {0}'}" FontSize="14" Foreground="#721C24"/>
                                        <TextBlock Text="{Binding WithdrawalsAmountHTG, StringFormat='HTG: {0:N0}'}" FontSize="14" Foreground="#721C24" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding WithdrawalsAmountUSD, StringFormat='USD: ${0:N2}'}" FontSize="14" Foreground="#721C24" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Separator Margin="0,10"/>

                            <!-- OpÃ©rations de change -->
                            <TextBlock Text="ðŸ”„ OpÃ©rations de Change" FontWeight="Bold" Foreground="#3498DB" Margin="0,15,0,10" FontSize="16"/>
                            <TextBlock Text="{Binding TodayExchanges, StringFormat=Nombre: {0}}" Foreground="#3498DB" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Margin="0,0,10,0" Background="#D1ECF1" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Vente USD" FontWeight="SemiBold" Foreground="#0C5460" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding UsdSalesAmount, StringFormat='HTG: {0:N0}'}" FontSize="14" Foreground="#0C5460" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Background="#D4EDDA" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Achat USD" FontWeight="SemiBold" Foreground="#155724" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding UsdPurchaseAmount, StringFormat='USD: ${0:N2}'}" FontSize="14" Foreground="#155724" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Separator Margin="0,10"/>

                            <!-- Paiements de CrÃ©dits -->
                            <TextBlock Text="ðŸ’° Recouvrements CrÃ©dits" FontWeight="Bold" Foreground="#8E44AD" Margin="0,15,0,10" FontSize="16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Margin="0,0,5,0" Background="#E8DAEF" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Nombre" FontWeight="SemiBold" Foreground="#6C3483" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CreditPaymentsCount}" FontSize="18" Foreground="#6C3483" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Margin="5,0" Background="#E8DAEF" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="HTG" FontWeight="SemiBold" Foreground="#6C3483" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CreditPaymentsAmountHTG, StringFormat='{}{0:N0}'}" FontSize="14" Foreground="#6C3483" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="2" Margin="5,0,0,0" Background="#E8DAEF" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="USD" FontWeight="SemiBold" Foreground="#6C3483" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CreditPaymentsAmountUSD, StringFormat='${0:N2}'}" FontSize="14" Foreground="#6C3483" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- DeuxiÃ¨me ligne : DerniÃ¨res transactions et actions -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Liste des derniÃ¨res transactions -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="ðŸ•’ DerniÃ¨res Transactions" Style="{StaticResource HeaderTextStyle}"/>
                                <Button HorizontalAlignment="Right" 
                                        Content="Actualiser" 
                                        Padding="10,5"
                                        Background="Transparent"
                                        BorderBrush="#BDC3C7"
                                        Command="{Binding RefreshTransactionsCommand}"/>
                            </Grid>
                            
                            <DataGrid ItemsSource="{Binding RecentTransactions}" 
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      Height="300"
                                      Margin="0,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Heure" 
                                                        Binding="{Binding Time, StringFormat='{}{0:HH:mm:ss}'}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding Type}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Client/Compte" 
                                                        Binding="{Binding ClientAccount}" 
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Montant" 
                                                        Binding="{Binding Amount}" 
                                                        Width="120"/>
                                    <DataGridTemplateColumn Header="Statut" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" 
                                                        CornerRadius="3" 
                                                        Padding="5,2">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="White" 
                                                               FontSize="11" 
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Actions et consultation -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ” Actions Rapides" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <!-- Consultation compte -->
                            <StackPanel Margin="0,10">
                                <TextBlock Text="Consultation Compte" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="AccountSearchBox" 
                                         Text="{Binding AccountSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="10,8"
                                         FontSize="14"
                                         Margin="0,0,0,5"/>
                                <Button Content="ðŸ‘¤ Consulter" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Command="{Binding ConsultAccountCommand}"/>
                            </StackPanel>

                            <Separator Margin="0,15"/>

                            <!-- GÃ©nÃ©ration rapport -->
                            <StackPanel Margin="0,10">
                                <TextBlock Text="Rapports" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Button Content="ðŸ“Š Rapport Journalier" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#17A2B8"
                                        Command="{Binding GenerateDailyReportCommand}"/>
                                <Button Content="ï¿½ Imprimer Mes Transactions" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#6F42C1"
                                        Click="PrintTransactionReport_Click"/>
                                <Button Content="ï¿½ðŸ“ˆ Export Excel" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#28A745"
                                        Command="{Binding ExportToExcelCommand}"/>
                            </StackPanel>

                            <Separator Margin="0,15"/>

                            <!-- Autres actions -->
                            <StackPanel Margin="0,10">
                                <TextBlock Text="Autres Actions" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Button Content="âš™ï¸ Configuration" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#6C757D"
                                        Command="{Binding ConfigurationCommand}"/>
