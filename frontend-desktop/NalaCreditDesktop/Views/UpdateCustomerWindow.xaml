<Window x:Class="NalaCreditDesktop.Views.UpdateCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise à Jour Client" Height="720" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Background="#f7f7fb" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="SearchTextBox" Width="220" Padding="8" />
                <Button x:Name="SearchButton" Content="Rechercher" Padding="16,8" Background="#3b82f6" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="8,0,0,0"/>
                <TextBlock x:Name="StatusText" Foreground="#6b7280" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,10">
                <Border Background="White" CornerRadius="8" Padding="15">
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Text="Informations personnelles" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Prénom"/>
                            <TextBox x:Name="FirstNameTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Nom"/>
                            <TextBox x:Name="LastNameTextBox" Padding="8" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                            <TextBlock Text="Date de naissance"/>
                            <DatePicker x:Name="BirthDatePicker" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <TextBlock Text="Sexe"/>
                            <ComboBox x:Name="GenderComboBox" SelectedIndex="0">
                                <ComboBoxItem Content="Masculin" Tag="Male"/>
                                <ComboBoxItem Content="Féminin" Tag="Female"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5,10,0" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox x:Name="IsActiveCheckBox" Content="Actif" IsChecked="True"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Text="Contact" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Téléphone principal"/>
                            <TextBox x:Name="PrimaryPhoneTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Téléphone secondaire"/>
                            <TextBox x:Name="SecondaryPhoneTextBox" Padding="8" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                            <TextBlock Text="Email"/>
                            <TextBox x:Name="EmailTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <TextBlock Text="Contact urgence (nom / téléphone)"/>
                            <TextBox x:Name="EmergencyNameTextBox" Padding="8" />
                            <TextBox x:Name="EmergencyPhoneTextBox" Padding="8" Margin="0,5,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Text="Adresse" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Rue"/>
                            <TextBox x:Name="StreetTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Commune"/>
                            <TextBox x:Name="CommuneTextBox" Padding="8" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                            <TextBlock Text="Département"/>
                            <TextBox x:Name="DepartmentTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <TextBlock Text="Code Postal"/>
                            <TextBox x:Name="PostalCodeTextBox" Padding="8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Text="Identité" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Type document"/>
                            <ComboBox x:Name="DocumentTypeComboBox" SelectedIndex="0">
                                <ComboBoxItem Content="CIN" Tag="NationalId"/>
                                <ComboBoxItem Content="Passeport" Tag="Passport"/>
                                <ComboBoxItem Content="Permis" Tag="DriversLicense"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Numéro document"/>
                            <TextBox x:Name="DocumentNumberTextBox" Padding="8" />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                            <TextBlock Text="Délivré le"/>
                            <DatePicker x:Name="IssuedDatePicker" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <TextBlock Text="Expire le"/>
                            <DatePicker x:Name="ExpiryDatePicker" />
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5,10,0">
                            <TextBlock Text="Autorité émettrice"/>
                            <TextBox x:Name="IssuingAuthorityTextBox" Padding="8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="15">
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Text="Profession" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Occupation"/>
                            <TextBox x:Name="OccupationTextBox" Padding="8" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Revenu mensuel"/>
                            <TextBox x:Name="MonthlyIncomeTextBox" Padding="8" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Annuler" Padding="16,8" Background="#e5e7eb" BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="SaveButton" Content="Enregistrer" Padding="18,8" Background="#16a34a" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
