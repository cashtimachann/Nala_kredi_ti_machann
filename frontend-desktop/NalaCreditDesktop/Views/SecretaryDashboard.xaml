                                         IsReadOnly="True"
                                         GridLinesVisibility="Horizontal"
                                         HeadersVisibility="Column"
                                         Height="400"
                                         FontSize="12">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Heure" Binding="{Binding Time}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                        <DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Rendez-vous du jour -->
                        <Border Grid.Column="1" 
                               Background="White" 
                               CornerRadius="10" 
                               Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.5"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="ðŸ“… Rendez-vous du Jour" 
                                          FontSize="18" 
                                          FontWeight="Bold" 
                                          Margin="0,0,0,15"/>
                                
                                <ListBox x:Name="AppointmentsList" 
                                        Height="400"
                                        BorderThickness="0">
                                    <ListBox.ItemTemplate>
