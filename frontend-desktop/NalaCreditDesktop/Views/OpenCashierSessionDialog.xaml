<Window x:Class="NalaCreditDesktop.Views.OpenCashierSessionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ouvrir une session pour un caissier" Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Ouverture de session caissier" 
                       FontWeight="Bold" 
                       FontSize="18"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <StackPanel Grid.Row="1">
            <!-- Cashier Selection -->
            <TextBlock Text="Sélectionner le caissier" 
                       Margin="0,0,0,6"
                       FontWeight="SemiBold"/>
            <ComboBox x:Name="CashierComboBox" 
                      Padding="10"
                      FontSize="14"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Id"
                      SelectionChanged="CashierComboBox_SelectionChanged"/>

            <!-- Solde HTG -->
            <TextBlock Text="Solde d'ouverture HTG" 
                       Margin="0,16,0,6"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="HtgTextBox" 
                     Padding="10"
                     FontSize="14"
                     Text="0"/>

            <!-- Solde USD -->
            <TextBlock Text="Solde d'ouverture USD" 
                       Margin="0,12,0,6"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UsdTextBox" 
                     Padding="10"
                     FontSize="14"
                     Text="0"/>

            <!-- Notes -->
            <TextBlock Text="Notes (optionnel)" 
                       Margin="0,12,0,6"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="NotesTextBox" 
                     Padding="10"
                     FontSize="14"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Info message -->
        <Border Grid.Row="2" 
                Background="#E3F2FD" 
                BorderBrush="#2196F3" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="12"
                Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ℹ️" FontSize="16" Margin="0,0,8,0"/>
                <TextBlock Text="Le caissier pourra commencer ses opérations dès l'ouverture de la session."
                           TextWrapping="Wrap"
                           Foreground="#1976D2"
                           FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Annuler" 
                    Width="100" 
                    Padding="0,10"
                    Margin="0,0,10,0"
                    Click="Cancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E0E0E0"/>
                        <Setter Property="Foreground" Value="#424242"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Ouvrir Session" 
                    Width="130" 
                    Padding="0,10"
                    Click="Validate_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#16A085"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#138D75"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
