<Window x:Class="NalaCreditDesktop.Views.ActiveLoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrÃ©dits Actifs - Succursale" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner" Background="#F7F9FB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0F3D91" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¼" FontSize="22" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="CrÃ©dits Actifs" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="BranchText" Foreground="#E6ECFF"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="âŸ³ RafraÃ®chir" Margin="0,0,8,0"/>
                    <Button x:Name="CloseButton" Content="Fermer" Background="#DC3545" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <DockPanel Grid.Row="1" Margin="12,8,12,4">
            <!-- Filters -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                <TextBlock Text="Recherche:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="SearchTextBox" Width="200"/>
                <Button x:Name="SearchButton" Content="Rechercher" Margin="8,0,0,0"/>

                <Separator Margin="12,0,12,0" Width="1"/>

                <TextBlock Text="Statut:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="StatusCombo" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="Tous" Tag=""/>
                    <ComboBoxItem Content="Actif" Tag="Active"/>
                    <ComboBoxItem Content="En retard" Tag="Overdue"/>
                    <ComboBoxItem Content="ComplÃ©tÃ©" Tag="Completed"/>
                </ComboBox>

                <TextBlock Text="Devise:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <ComboBox x:Name="CurrencyCombo" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="Tous" Tag=""/>
                    <ComboBoxItem Content="HTG" Tag="HTG"/>
                    <ComboBoxItem Content="USD" Tag="USD"/>
                </ComboBox>

                <TextBlock Text="Par page:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <ComboBox x:Name="PageSizeCombo" Width="80" SelectedIndex="1">
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>

                <Button x:Name="ApplyFiltersButton" Content="Appliquer" Margin="12,0,0,0"/>
            </StackPanel>
            
            <!-- Data Grid -->
            <DataGrid x:Name="LoansDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                      MouseDoubleClick="LoansDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NÂ° PrÃªt" Binding="{Binding LoanNumber}" Width="130"/>
                    <DataGridTextColumn Header="Client" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Taux Mensuel" Binding="{Binding MonthlyRate, StringFormat=P2}" Width="120"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding LoanTypeDisplay}" Width="140"/>
                    <DataGridTextColumn Header="Montant" Binding="{Binding PrincipalAmount, StringFormat=N0}" Width="120"/>
                    <DataGridTextColumn Header="Solde Restant" Binding="{Binding RemainingBalance, StringFormat=N0}" Width="130"/>
                    <DataGridTextColumn Header="Paiement Mensuel" Binding="{Binding MonthlyPayment, StringFormat=N0}" Width="140"/>
                    <DataGridTextColumn Header="DurÃ©e (mois)" Binding="{Binding TermMonths}" Width="100"/>
                    <DataGridTextColumn Header="Statut" Binding="{Binding StatusDisplay}" Width="100"/>
                    <DataGridTextColumn Header="Prochain Paiement" Binding="{Binding NextPaymentDate, StringFormat=dd/MM/yyyy}" Width="140"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ‘ Voir" Click="ViewDetails_Click" Tag="{Binding Id}" 
                                        Padding="6,2" Background="#0D6EFD" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Pagination -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,8,0,0" HorizontalAlignment="Right">
                <Button x:Name="PrevPageButton" Content="â—€ PrÃ©cÃ©dent" Margin="0,0,8,0"/>
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center"/>
                <Button x:Name="NextPageButton" Content="Suivant â–¶" Margin="8,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
