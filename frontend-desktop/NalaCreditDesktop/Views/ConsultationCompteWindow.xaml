                                <TextBlock x:Name="DerniereActiviteUSDText" 
                                           Text="DerniÃ¨re activitÃ©: --" 
                                           FontSize="10" 
                                           Foreground="#1D4ED8" 
                                           HorizontalAlignment="Center"/>
