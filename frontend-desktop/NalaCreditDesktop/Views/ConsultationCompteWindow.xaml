                                                            Width="100"/>
                                        <DataGridTextColumn Header="Caissier" 
                                                            Binding="{Binding Caissier}" 
                                                            Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
