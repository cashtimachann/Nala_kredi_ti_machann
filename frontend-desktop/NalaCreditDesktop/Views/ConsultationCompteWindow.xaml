        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Section Recherche -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="20">
                <!-- Effect removed -->
                
                <StackPanel>
                    <TextBlock Text="ðŸ”Ž RECHERCHE CLIENT" 
