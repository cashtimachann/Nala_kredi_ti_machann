                                           FontSize="14" 
                                           Foreground="#6B7280"/>
                                <TextBlock x:Name="ClientEmailText" 
                                           Text="" 
                                           FontSize="14" 
                                           Foreground="#6B7280"/>
                            </StackPanel>
                            
                            <!-- Statut -->
                            <Border Grid.Column="2" 
                                    x:Name="StatutClientBorder"
                                    Background="#22C55E" 
                                    CornerRadius="20" 
                                    Padding="15,8" 
                                    VerticalAlignment="Top">
                                <TextBlock x:Name="StatutClientText" 
                                           Text="ACTIF" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="12"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Soldes actuels -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Solde HTG -->
                        <Border Grid.Column="0" 
                                Background="#DCFCE7" 
                                BorderBrush="#22C55E" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ’µ SOLDE HTG" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Foreground="#059669" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="SoldeHTGText" 
                                           Text="0.00" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#22C55E" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,10,0,0"/>
                                <TextBlock x:Name="DerniereActiviteHTGText" 
                                           Text="DerniÃ¨re activitÃ©: --" 
