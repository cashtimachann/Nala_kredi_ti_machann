                    <!-- RÃ©sultats de recherche rapide -->
                    <Border x:Name="SearchResultsPanel" 
                            Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,15,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="RÃ©sultats de recherche :" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       Margin="0,0,0,10"/>
                            
                            <ListBox x:Name="SearchResultsListBox" 
                                     MaxHeight="200"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     SelectionChanged="SearchResults_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8" 
                                                Margin="2"
                                                Background="White"
                                                CornerRadius="4"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding NomComplet}" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding NumeroCompte}" 
                                                           FontSize="11" 
                                                           Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding Telephone}" 
                                                           FontSize="11" 
                                                           Foreground="#6B7280"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Actions rapides -->
                    <Separator Margin="0,20"/>
                    
                    <TextBlock Text="Actions rapides :" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <Button x:Name="NouveauDepotButton" 
                            Content="âž• Nouveau DÃ©pÃ´t" 
