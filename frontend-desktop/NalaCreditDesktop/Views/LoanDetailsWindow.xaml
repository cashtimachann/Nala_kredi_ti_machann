                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Dates Importantes -->
                <TextBlock Text="Dates Importantes" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Date de Demande" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="ApplicationDateText" Style="{StaticResource ValueStyle}"/>

