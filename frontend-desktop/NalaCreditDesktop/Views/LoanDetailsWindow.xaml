                            <TextBlock Text="IntÃ©rÃªt Total (estimÃ©)" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="TotalInterestText" Style="{StaticResource ValueStyle}" Foreground="#9B59B6"/>

                            <TextBlock Text="Total Ã  Rembourser (+ Frais)" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="TotalRepaymentText" Style="{StaticResource ValueStyle}" FontWeight="Bold" Foreground="#5D6D7E"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Payment Status -->
                <TextBlock Text="Ã‰tat des Paiements" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Versements effectuÃ©s" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="PaymentsMadeText" Style="{StaticResource ValueStyle}"/>

