                            <TextBlock x:Name="CustomerCodeText" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="NumÃ©ro de tÃ©lÃ©phone" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="ClientPhoneText" Style="{StaticResource ValueStyle}"/>

