                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Type de crÃ©dit" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="LoanTypeText" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Montant demandÃ©" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="RequestedAmountText" Style="{StaticResource ValueStyle}"/>

