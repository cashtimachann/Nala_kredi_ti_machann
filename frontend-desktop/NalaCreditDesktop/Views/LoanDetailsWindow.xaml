                            <TextBlock x:Name="ApprovalDateText" Style="{StaticResource ValueStyle}"/>
                            <TextBlock x:Name="ApprovedByText" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Date de DÃ©caissement" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="DisbursementDateText" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Date d'Ã‰chÃ©ance Finale" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="MaturityDateText" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Progress Bar -->
                <TextBlock Text="Progression du Remboursement" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,0,10">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <TextBlock x:Name="ProgressPercentageText" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="#27AE60"
                                      HorizontalAlignment="Left"/>
                            <TextBlock x:Name="ProgressFractionText" 
                                      FontSize="13" 
                                      Foreground="#7F8C8D"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="PaymentProgressBar" 
                                    Height="20" 
                                    Minimum="0" 
                                    Maximum="100"
                                    Foreground="#27AE60"
                                    Background="#ECF0F1"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
            </TabItem>

            <!-- Tab: Calendrier d'Amortissement -->
            <TabItem Header="Calendrier">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Calendrier" FontSize="13"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Calendrier d'Amortissement" 
                              FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="ScheduleDataGrid"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 Background="White"
                                 AlternatingRowBackground="#F9FAFB"
                                 RowHeight="35"
                                 CanUserResizeRows="False"
                                 CanUserReorderColumns="False"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding InstallmentNumber}" Width="50"/>
                                <DataGridTextColumn Header="Date d'Ã‰chÃ©ance" Binding="{Binding DueDateFormatted}" Width="120"/>
                                <DataGridTextColumn Header="Capital" Binding="{Binding PrincipalFormatted}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="IntÃ©rÃªt" Binding="{Binding InterestFormatted}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Frais" Binding="{Binding FeeFormatted}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Total" Binding="{Binding TotalFormatted}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Total + Frais" Binding="{Binding TotalWithFeeFormatted}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#5B21B6"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Solde Restant" Binding="{Binding BalanceFormatted}" Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Statut" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border x:Name="StatusBorder" CornerRadius="10" Padding="8,3" HorizontalAlignment="Center">
                                                <TextBlock x:Name="StatusText" Text="{Binding StatusText}" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="PAID">
                                                    <Setter TargetName="StatusBorder" Property="Background" Value="#D1FAE5"/>
                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#065F46"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="PENDING">
                                                    <Setter TargetName="StatusBorder" Property="Background" Value="#FEF3C7"/>
                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#92400E"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="OVERDUE">
                                                    <Setter TargetName="StatusBorder" Property="Background" Value="#FEE2E2"/>
                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#991B1B"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="UPCOMING">
                                                    <Setter TargetName="StatusBorder" Property="Background" Value="#E5E7EB"/>
                                                    <Setter TargetName="StatusText" Property="Foreground" Value="#374151"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab: Historique des Paiements -->
            <TabItem Header="Historique">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’°" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Historique" FontSize="13"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Historique des Paiements" 
                              FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="PaymentHistoryItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                           BorderBrush="#E5E7EB" 
                                           BorderThickness="1" 
                                           CornerRadius="8" 
                                           Padding="15" 
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                                <Border Background="#D1FAE5" CornerRadius="10" Padding="8,3" Margin="0,0,10,0">
                                                    <TextBlock Text="âœ“ PayÃ©" FontSize="11" FontWeight="SemiBold" Foreground="#065F46"/>
                                                </Border>
                                                <TextBlock Text="{Binding PaymentDateFormatted}" FontSize="13" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding ReceiptDisplay}" FontSize="11" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <!-- Amounts -->
                                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Montant Total" FontSize="11" Foreground="#6B7280"/>
                                                    <TextBlock Text="{Binding AmountFormatted}" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Capital" FontSize="11" Foreground="#6B7280"/>
                                                    <TextBlock Text="{Binding PrincipalFormatted}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="IntÃ©rÃªt" FontSize="11" Foreground="#6B7280"/>
                                                    <TextBlock Text="{Binding InterestFormatted}" FontSize="14" FontWeight="SemiBold" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Details -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                <TextBlock FontSize="11" Foreground="#6B7280">
                                                    <Run Text="MÃ©thode: "/>
                                                    <Run Text="{Binding PaymentMethod}" FontWeight="SemiBold"/>
                                                    <Run Text="  â€¢  ReÃ§u par: "/>
                                                    <Run Text="{Binding ReceivedBy}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
               Background="White" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="25,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Fermer"
                       Background="#95A5A6"
                       Foreground="White"
                       Padding="20,10"
                       FontSize="13"
                       FontWeight="SemiBold"
