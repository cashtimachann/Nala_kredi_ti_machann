                            <TextBlock x:Name="ApprovalDifferenceText" Style="{StaticResource ValueStyle}" Foreground="#3498DB"/>

                            <TextBlock Text="Montant principal" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="PrincipalAmountText" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Frais de dossier (5%)" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="ProcessingFeeText" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
