                            <TextBlock Text="Versement mensuel" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="MonthlyPaymentText" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="Versement mensuel (avec frais)" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="MonthlyPaymentWithFeesText" 
                                      Style="{StaticResource ValueStyle}"
