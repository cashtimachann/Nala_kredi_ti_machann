                              FontSize="14" 
                              Foreground="#BDC3C7" 
                              Margin="0,5,0,0"/>
                </StackPanel>

                <Border x:Name="StatusBadge" 
                       Grid.Column="1" 
                       Style="{StaticResource StatusBadgeStyle}"
                       VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" 
                              FontSize="13" 
                              FontWeight="SemiBold"
