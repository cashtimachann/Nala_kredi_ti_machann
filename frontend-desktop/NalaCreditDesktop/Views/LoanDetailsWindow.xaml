        <!-- Content -->
        <TabControl Grid.Row="1" Margin="0" BorderThickness="0">
            <!-- Tab: Vue d'ensemble -->
            <TabItem Header="Vue d'ensemble">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Vue d'ensemble" FontSize="13"/>
                        </StackPanel>
                    </DataTemplate>
