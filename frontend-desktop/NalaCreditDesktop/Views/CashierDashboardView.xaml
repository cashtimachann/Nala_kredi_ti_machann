<UserControl x:Class="NalaCreditDesktop.Views.CashierDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Tableau de Bord - Caissier" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- Dashboard Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cash Balance HTG -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,10,10">
                    <StackPanel>
                        <TextBlock Text="SOLDE CAISSE HTG" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="CashBalanceHTGText" 
                                  Text="{Binding DashboardData.CashBalanceHTG, StringFormat='{}{0:N0} HTG'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#1e293b"/>
                    </StackPanel>
                </Border>

                <!-- Cash Balance USD -->
                <Border Grid.Row="0" Grid.Column="1" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="5,0,5,10">
                    <StackPanel>
                        <TextBlock Text="SOLDE CAISSE USD" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="CashBalanceUSDText" 
                                  Text="{Binding DashboardData.CashBalanceUSD, StringFormat='${0:N2}'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#1e293b"/>
                    </StackPanel>
                </Border>

                <!-- Today's Transactions -->
                <Border Grid.Row="0" Grid.Column="2" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="10,0,0,10">
                    <StackPanel>
                        <TextBlock Text="TRANSACTIONS AUJOURD'HUI" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="TransactionCountText" 
                                  Text="{Binding DashboardData.TransactionCount}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#1e293b"/>
                    </StackPanel>
                </Border>

                <!-- Deposits Today -->
                <Border Grid.Row="1" Grid.Column="0" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="DÉPÔTS AUJOURD'HUI" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="DepositsText" 
                                  Text="{Binding DashboardData.TodayDeposits, StringFormat='{}{0:N0} HTG'}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#22c55e"/>
                    </StackPanel>
                </Border>

                <!-- Withdrawals Today -->
                <Border Grid.Row="1" Grid.Column="1" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="RETRAITS AUJOURD'HUI" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="WithdrawalsText" 
                                  Text="{Binding DashboardData.TodayWithdrawals, StringFormat='{}{0:N0} HTG'}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#ef4444"/>
                    </StackPanel>
                </Border>

                <!-- Clients Served -->
                <Border Grid.Row="1" Grid.Column="2" 
                       Background="White" 
                       BorderBrush="#e2e8f0" 
                       BorderThickness="1" 
                       CornerRadius="8" 
                       Padding="20" 
                       Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="CLIENTS SERVIS" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#64748b" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="ClientsServedText" 
                                  Text="{Binding DashboardData.ClientsServed}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#3b82f6"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Border Background="White" 
                   BorderBrush="#e2e8f0" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Actions Rapides" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Deposit Form -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nouveau Dépôt" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="DepositAccountNumber" 
                                    Text="{Binding AccountNumber}" 
                                    Margin="0,0,0,10" 
                                    Padding="8"
                                    ToolTip="Numéro de compte"/>
                            
                            <TextBox x:Name="DepositAmount" 
                                    Text="{Binding TransactionAmount}" 
                                    Margin="0,0,0,10" 
                                    Padding="8"
                                    ToolTip="Montant"/>
                            
                            <ComboBox x:Name="DepositCurrency" 
                                     SelectedItem="{Binding SelectedCurrency}" 
                                     Margin="0,0,0,10" 
                                     Padding="8">
                                <ComboBoxItem Content="HTG"/>
                                <ComboBoxItem Content="USD"/>
                            </ComboBox>
                            
                            <Button Content="Traiter Dépôt" 
                                   Command="{Binding ProcessDepositCommand}"
                                   Background="#22c55e" 
                                   Foreground="White" 
                                   Padding="0,10" 
                                   BorderThickness="0"/>
                        </StackPanel>

                        <!-- Withdrawal Form -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Nouveau Retrait" 
                                      FontWeight="Medium" 
                                      Margin="0,0,0,10"/>
                            
                            <TextBox x:Name="WithdrawalAccountNumber" 
                                    Margin="0,0,0,10" 
                                    Padding="8"
                                    ToolTip="Numéro de compte"/>
                            
                            <TextBox x:Name="WithdrawalAmount" 
                                    Margin="0,0,0,10" 
                                    Padding="8"
                                    ToolTip="Montant"/>
                            
                            <ComboBox x:Name="WithdrawalCurrency" 
                                     Margin="0,0,0,10" 
                                     Padding="8">
                                <ComboBoxItem Content="HTG"/>
                                <ComboBoxItem Content="USD"/>
                            </ComboBox>
                            
                            <Button Content="Traiter Retrait" 
                                   Command="{Binding ProcessWithdrawalCommand}"
                                   Background="#ef4444" 
                                   Foreground="White" 
                                   Padding="0,10" 
                                   BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Transactions -->
            <Border Background="White" 
                   BorderBrush="#e2e8f0" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Padding="20">
                <StackPanel>
                    <TextBlock Text="Activité Récente" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"/>
                    
                    <ListBox x:Name="RecentTransactionsList" 
                            ItemsSource="{Binding RecentTransactions}"
                            Height="200" 
                            Background="Transparent" 
                            BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                          FontFamily="Consolas" 
                                          FontSize="12" 
                                          Foreground="#64748b"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>