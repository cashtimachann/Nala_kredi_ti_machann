<Window x:Class="NalaCreditDesktop.Views.CreditAgentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nala Kredi Ti Machann - Agent de CrÃ©dit" 
        Height="900" Width="1600"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MenuButtonStyle is provided globally in App.xaml -->

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¼" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Agent de CrÃ©dit" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="UserNameText" 
                                   Text="[Nom de l'agent]" 
                                   FontSize="14" 
                                   Foreground="#BDC3C7"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Background="#E74C3C" 
                            CornerRadius="20" 
                            Padding="12,6" 
                            Margin="0,0,15,0"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ””" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock x:Name="NotificationBadge" 
                                       Text="5" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       FontSize="14"/>
                        </StackPanel>
                    </Border>
                    <TextBlock x:Name="CurrentTimeText" 
                               FontSize="16" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBlock x:Name="CurrentDateText" 
                               FontSize="16" 
                               Foreground="#BDC3C7" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="ðŸšª Deconnexion"
                        Click="Logout_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#E74C3C"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar Menu -->
            <Border Grid.Column="0" Background="#34495E" Padding="0,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š MENU PRINCIPAL" 
                                   Foreground="#BDC3C7" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Margin="20,0,0,10"/>

                        <Button Content="ðŸ  Tableau de Bord" 
                                Click="Dashboard_Click"
                                Style="{StaticResource MenuButtonStyle}"/>
                        
                        <Button Content="ðŸ’° Transactions" 
                                Click="Transactions_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Separator Background="#2C3E50" Margin="10,15"/>

                        <TextBlock Text="ðŸ’³ GESTION CRÃ‰DIT" 
                                   Foreground="#BDC3C7" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Margin="20,0,0,10"/>

                        <Button Content="ðŸ“ Nouvelle Demande" 
                                Click="NewLoanApplication_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="ðŸ“‹ Mes Demandes" 
                                Click="MyApplications_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="ðŸ’µ Enreg. Remboursement" 
                                Click="RecordPayment_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="ðŸ‘¥ Mon Portefeuille" 
                                Click="MyPortfolio_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Separator Background="#2C3E50" Margin="10,15"/>

                        <TextBlock Text="ðŸƒ TERRAIN" 
                                   Foreground="#BDC3C7" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Margin="20,0,0,10"/>

                        <Button Content="ðŸ—ºï¸ Visites PlanifiÃ©es" 
                                Click="ScheduledVisits_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="âœ… Ã‰valuation Client" 
                                Click="ClientEvaluation_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="ðŸ“¸ Photos/Documents" 
                                Click="FieldDocuments_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Separator Background="#2C3E50" Margin="10,15"/>

                        <TextBlock Text="ðŸ“ˆ RAPPORTS" 
                                   Foreground="#BDC3C7" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Margin="20,0,0,10"/>

                        <Button Content="ðŸ“Š Performance" 
                                Click="Performance_Click"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="ðŸ“‰ Taux Remboursement" 
                                Click="RepaymentRate_Click"
                                Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- Welcome Section -->
                    <TextBlock Text="Tableau de Bord - Agent de CrÃ©dit" 
                               Style="{StaticResource HeaderTextStyle}" 
                               Margin="0,0,0,20"/>

                    <!-- Statistics Cards -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Active Credits -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š CrÃ©dits Actifs" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D" 
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="ActiveCreditsText" 
                                           Text="23" 
                                           FontSize="36" 
                                           FontWeight="Bold" 
                                           Foreground="#27AE60"/>
                                <TextBlock Text="+3 ce mois" 
                                           FontSize="12" 
                                           Foreground="#95A5A6" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Portfolio Amount -->
                        <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ’° Portefeuille Total" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D" 
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="PortfolioAmountText" 
                                           Text="345,500 HTG" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="#3498DB"/>
                                <TextBlock Text="Encours total" 
                                           FontSize="12" 
                                           Foreground="#95A5A6" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Pending Applications -->
                        <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Demandes en Attente" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D" 
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="PendingApplicationsText" 
                                           Text="7" 
                                           FontSize="36" 
                                           FontWeight="Bold" 
                                           Foreground="#F39C12"/>
                                <TextBlock Text="Ã€ traiter" 
                                           FontSize="12" 
                                           Foreground="#95A5A6" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Repayment Rate -->
                        <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ˆ Taux Remboursement" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D" 
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="RepaymentRateText" 
                                           Text="94.5%" 
                                           FontSize="36" 
                                           FontWeight="Bold" 
                                           Foreground="#27AE60"/>
                                <TextBlock Text="Excellent!" 
                                           FontSize="12" 
                                           Foreground="#27AE60" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Quick Actions -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="10,30,10,20"
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel>
                            <TextBlock Text="âš¡ Actions Rapides" 
                                       Style="{StaticResource SubHeaderTextStyle}" 
                                       Margin="0,0,0,15"/>
                            
                            <UniformGrid Columns="4" Rows="1">
                                <Button Content="ðŸ“ Nouvelle Demande" 
                                        Click="NewLoanApplication_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#27AE60"
                                        Margin="5"/>
                                
                                <Button Content="ðŸ’µ Enreg. Paiement" 
                                        Click="RecordPayment_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#3498DB"
                                        Margin="5"/>
                                
                                <Button Content="ðŸ—ºï¸ Planifier Visite" 
                                        Click="ScheduledVisits_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#9B59B6"
                                        Margin="5"/>
                                
                                <Button Content="ðŸ“Š Voir Portefeuille" 
                                        Click="MyPortfolio_Click"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#E67E22"
                                        Margin="5"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Two Column Layout for Lists -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recent Applications -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="10,0,10,0"
                                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Demandes RÃ©centes" 
                                           Style="{StaticResource SubHeaderTextStyle}" 
                                           Margin="0,0,0,15"/>
                                
                                <DataGrid x:Name="RecentApplicationsGrid"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          Background="White"
                                          RowBackground="White"
                                          AlternatingRowBackground="#F8F9FA"
                                          BorderThickness="0"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          Height="280">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Client" 
                                                          Binding="{Binding ClientName}" 
                                                          Width="*"/>
                                        <DataGridTextColumn Header="Montant" 
                                                          Binding="{Binding Amount}" 
                                                          Width="Auto"/>
                                        <DataGridTextColumn Header="Statut" 
                                                          Binding="{Binding Status}" 
                                                          Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Payments Due This Week -->
                        <Border Grid.Column="1" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="10,0,10,0"
                                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                            <StackPanel>
                                <TextBlock Text="ðŸ’µ Paiements Attendus (Cette Semaine)" 
                                           Style="{StaticResource SubHeaderTextStyle}" 
                                           Margin="0,0,0,15"/>
                                
                                <ListBox x:Name="PaymentsDueList"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Height="280"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" 
                                                    CornerRadius="5" 
                                                    Padding="12" 
                                                    Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding ClientName}" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="14"/>
                                                        <TextBlock Text="{Binding DueDate}" 
                                                                   FontSize="12" 
                                                                   Foreground="#7F8C8D"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Amount}" 
                                                               FontWeight="Bold" 
                                                               FontSize="14" 
                                                               Foreground="#E74C3C"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Scheduled Visits -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="10,20,10,0"
                            Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
                        <StackPanel>
                            <TextBlock Text="ðŸ—ºï¸ Visites PlanifiÃ©es Aujourd'hui" 
                                       Style="{StaticResource SubHeaderTextStyle}" 
                                       Margin="0,0,0,15"/>
                            
                            <ListBox x:Name="TodayVisitsList"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Height="200"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E8F5E9" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Time}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16"
                                                           Foreground="#27AE60"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,20,0"/>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ClientName}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"/>
                                                    <TextBlock Text="{Binding Purpose}" 
                                                               FontSize="12" 
                                                               Foreground="#555"/>
                                                    <TextBlock Text="{Binding Address}" 
                                                               FontSize="11" 
                                                               Foreground="#777"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="2" 
                                                        Content="ðŸ“ GPS" 
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="10,5"
                                                        Margin="10,0"
                                                        Cursor="Hand"/>
                                                
                                                <Button Grid.Column="3" 
                                                        Content="âœ… Fait" 
                                                        Background="#2196F3"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="10,5"
                                                        Cursor="Hand"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
