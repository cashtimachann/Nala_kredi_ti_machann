<UserControl x:Class="NalaCreditDesktop.Views.SearchBorrowerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#10b981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#f59e0b"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#8b5cf6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7c3aed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#f8fafc">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,20"
                BorderBrush="#e2e8f0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Rechercher Client" FontSize="24" FontWeight="Bold" 
                               Foreground="#1e293b" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ClearButton" Content="ðŸ—‘ï¸ Effacer" 
                            Style="{StaticResource WarningButtonStyle}"
                            ToolTip="Effacer les critÃ¨res de recherche"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Form -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,20"
                BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="8">
            <StackPanel>
                <!-- Quick Search -->
                <TextBlock Text="Recherche Rapide" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#334155" Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="QuickSearchTextBox" Grid.Column="0"
                             FontSize="16" Padding="15"
                             BorderBrush="#cbd5e1" BorderThickness="1"
                             Background="#f8fafc"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Nom, tÃ©lÃ©phone, ou numÃ©ro de compte..." 
                                                                   Foreground="#94a3b8" FontSize="16" Padding="15,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button x:Name="QuickSearchButton" Grid.Column="1" Content="ðŸ” Rechercher" 
                            Style="{StaticResource SearchButtonStyle}" Margin="10,0,0,0"
                            Height="50"/>
                </Grid>

                <!-- Separator -->
                <Border Height="1" Background="#e2e8f0" Margin="0,10"/>

                <!-- Advanced Search Toggle -->
                <Button x:Name="AdvancedToggleButton" Content="â–¼ Recherche AvancÃ©e" 
                        Background="Transparent" BorderThickness="0"
                        Foreground="#8b5cf6" FontSize="14" FontWeight="SemiBold"
                        HorizontalAlignment="Left" Cursor="Hand" Margin="0,10"/>

                <!-- Advanced Search Panel -->
                <Border x:Name="AdvancedSearchPanel" Visibility="Collapsed" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="CritÃ¨res AvancÃ©s" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#334155" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="PrÃ©nom" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="FirstNameTextBox" Padding="10" BorderBrush="#cbd5e1"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,10,15">
                                <TextBlock Text="Nom" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="LastNameTextBox" Padding="10" BorderBrush="#cbd5e1"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,15">
                                <TextBlock Text="TÃ©lÃ©phone" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="PhoneTextBox" Padding="10" BorderBrush="#cbd5e1"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="NÂ° Compte" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="AccountNumberTextBox" Padding="10" BorderBrush="#cbd5e1"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,10,15">
                                <TextBlock Text="Statut PrÃªt" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="LoanStatusComboBox" Padding="10" BorderBrush="#cbd5e1">
                                    <ComboBoxItem Content="Tous" IsSelected="True"/>
                                    <ComboBoxItem Content="Avec prÃªts actifs"/>
                                    <ComboBoxItem Content="Avec retards"/>
                                    <ComboBoxItem Content="Sans prÃªt"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,15">
                                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailTextBox" Padding="10" BorderBrush="#cbd5e1"/>
                            </StackPanel>

                            <!-- Row 3 - Search Button -->
                            <Button x:Name="AdvancedSearchButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                    Content="ðŸ” Lancer la Recherche" 
                                    Style="{StaticResource SearchButtonStyle}"
                                    HorizontalAlignment="Center" Padding="30,12" FontSize="16"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="2" Background="White" Padding="20"
                BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Results Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="ResultsCountText" Text="RÃ©sultats de recherche" 
                                   FontSize="18" FontWeight="SemiBold" Foreground="#1e293b"/>
                        <TextBlock x:Name="ResultsCountNumber" Text="" 
                                   FontSize="18" FontWeight="Bold" Foreground="#8b5cf6" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Button x:Name="ExportButton" Grid.Column="1" Content="ðŸ“¥ Exporter" 
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="Exporter les rÃ©sultats vers Excel"/>
                </Grid>

                <!-- Loading Panel -->
                <Border x:Name="LoadingPanel" Grid.Row="1" Visibility="Collapsed"
                        Background="White" CornerRadius="8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³" FontSize="48" TextAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Recherche en cours..." FontSize="16" 
                                   Foreground="#64748b" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Empty State Panel -->
                <Border x:Name="EmptyStatePanel" Grid.Row="1" Visibility="Visible"
                        Background="#f8fafc" BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="64" TextAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Effectuez une recherche" FontSize="18" FontWeight="SemiBold"
                                   Foreground="#334155" TextAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Utilisez les critÃ¨res ci-dessus pour trouver un client" 
                                   FontSize="14" Foreground="#64748b" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- No Results Panel -->
                <Border x:Name="NoResultsPanel" Grid.Row="1" Visibility="Collapsed"
                        Background="#fef2f2" BorderBrush="#fecaca" BorderThickness="1" CornerRadius="8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="âŒ" FontSize="64" TextAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Aucun rÃ©sultat trouvÃ©" FontSize="18" FontWeight="SemiBold"
                                   Foreground="#991b1b" TextAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Essayez avec d'autres critÃ¨res de recherche" 
                                   FontSize="14" Foreground="#dc2626" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Results DataGrid -->
                <DataGrid x:Name="ResultsDataGrid" Grid.Row="1" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          Background="White"
                          RowHeight="60"
                          AlternatingRowBackground="#f8fafc"
                          Visibility="Collapsed">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#f1f5f9"/>
                            <Setter Property="Foreground" Value="#334155"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#e2e8f0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f1f5f9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Client Info -->
                        <DataGridTemplateColumn Header="Client" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" 
                                                   FontSize="15" Foreground="#1e293b"/>
                                        <TextBlock Text="{Binding CustomerPhone}" FontSize="12" 
                                                   Foreground="#64748b" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding CustomerEmail}" FontSize="11" 
                                                   Foreground="#94a3b8" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Account Number -->
                        <DataGridTemplateColumn Header="NÂ° Compte" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SavingsAccountNumber}" 
                                               FontFamily="Consolas" FontWeight="SemiBold"
                                               Foreground="#3b82f6" FontSize="13"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Loan Stats -->
                        <DataGridTemplateColumn Header="PrÃªts" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TotalLoansDisplay}" FontWeight="Bold" 
                                                   FontSize="14" Foreground="#1e293b"/>
                                        <TextBlock Text="{Binding ActiveLoansDisplay}" 
                                                   Foreground="#10b981" FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Outstanding Amount -->
                        <DataGridTemplateColumn Header="Encours" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding OutstandingAmountDisplay}" 
                                                   FontWeight="Bold" FontSize="14" Foreground="#3b82f6"/>
                                        <TextBlock Text="{Binding LastPaymentDisplay}" 
                                                   FontSize="11" Foreground="#64748b" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="Statut" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Ã€ Jour">
                                                        <Setter Property="Background" Value="#d1fae5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="En Retard">
                                                        <Setter Property="Background" Value="#fee2e2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding StatusDisplay}" Value="Inactif">
                                                        <Setter Property="Background" Value="#f1f5f9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}" FontWeight="SemiBold" FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding StatusDisplay}" Value="Ã€ Jour">
                                                            <Setter Property="Foreground" Value="#059669"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding StatusDisplay}" Value="En Retard">
                                                            <Setter Property="Foreground" Value="#dc2626"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding StatusDisplay}" Value="Inactif">
                                                            <Setter Property="Foreground" Value="#64748b"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="*" MinWidth="280">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button Content="ðŸ‘ï¸ Profil" Style="{StaticResource ActionButtonStyle}"
                                                Tag="{Binding CustomerId}" Click="ViewProfile_Click"
                                                ToolTip="Voir le profil complet"/>
                                        <Button Content="ðŸ“œ PrÃªts" Style="{StaticResource ActionButtonStyle}"
                                                Tag="{Binding CustomerId}" Click="ViewLoans_Click"
                                                ToolTip="Historique des prÃªts"/>
                                        <Button Content="ðŸ“ž Contact" Style="{StaticResource WarningButtonStyle}"
                                                Tag="{Binding CustomerPhone}" Click="Contact_Click"
                                                ToolTip="Contacter le client"/>
                                        <Button Content="ðŸ’° Nouveau" Style="{StaticResource SuccessButtonStyle}"
                                                Tag="{Binding SavingsAccountNumber}" Click="NewLoan_Click"
                                                ToolTip="CrÃ©er nouveau prÃªt"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Border Grid.Row="2" Margin="0,15,0,0" Padding="15,10" 
                        Background="#f8fafc" CornerRadius="6"
                        Visibility="{Binding ElementName=ResultsDataGrid, Path=Visibility}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PrevPageButton" Grid.Column="0" Content="â—€ PrÃ©cÃ©dent" 
                                Style="{StaticResource ActionButtonStyle}"
                                IsEnabled="False"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentPageText" Text="Page 1 / 1" 
                                       FontWeight="SemiBold" Foreground="#334155" Margin="0,0,15,0"/>
                            <TextBlock x:Name="PageInfoText" Text="0-0 sur 0" 
                                       Foreground="#64748b"/>
                        </StackPanel>

                        <Button x:Name="NextPageButton" Grid.Column="2" Content="Suivant â–¶" 
                                Style="{StaticResource ActionButtonStyle}"
                                IsEnabled="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
