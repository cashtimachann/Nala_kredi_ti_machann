<UserControl x:Class="NalaCreditDesktop.Views.ActiveLoansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#ef4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dc2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#10b981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ’° CrÃ©dits Actifs" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#1e293b"/>
                    <TextBlock Text="Gestion de votre portefeuille de prÃªts actifs" 
                              FontSize="14" 
                              Foreground="#64748b" 
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RefreshButton" 
                           Style="{StaticResource ActionButtonStyle}"
                           Content="ðŸ”„ Actualiser" 
                           Padding="15,8"
                           Margin="0,0,10,0"/>
                    <Button x:Name="ExportButton" 
                           Style="{StaticResource SuccessButtonStyle}"
                           Content="ðŸ“Š Exporter" 
                           Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total PrÃªts Actifs -->
                <Border Grid.Column="0" 
                       Background="#eff6ff" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Total PrÃªts" 
                                  FontSize="12" 
                                  Foreground="#3b82f6" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="TotalLoansText" 
                                  Text="0" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#1e40af" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="TotalLoansSubText" 
                                  Text="prÃªts actifs" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- Portefeuille Total -->
                <Border Grid.Column="1" 
                       Background="#f0fdf4" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’µ Portefeuille" 
                                  FontSize="12" 
                                  Foreground="#10b981" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="TotalPortfolioText" 
                                  Text="0.00 HTG" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#047857" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="capital en circulation" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- En Retard -->
                <Border Grid.Column="2" 
                       Background="#fef2f2" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ En Retard" 
                                  FontSize="12" 
                                  Foreground="#ef4444" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="OverdueCountText" 
                                  Text="0" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#dc2626" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="OverdueAmountText" 
                                  Text="0.00 HTG en retard" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- Taux de Remboursement -->
                <Border Grid.Column="3" 
                       Background="#fefce8" 
                       CornerRadius="10" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Taux Remb." 
                                  FontSize="12" 
                                  Foreground="#eab308" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="RepaymentRateText" 
                                  Text="0%" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#ca8a04" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="performance globale" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters and Search -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Rechercher" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" 
                            Height="36" 
                            Padding="10,8"
                            FontSize="14"
                            BorderBrush="#cbd5e1" 
                            BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                   BorderBrush="{TemplateBinding BorderBrush}" 
                                                   BorderThickness="{TemplateBinding BorderThickness}" 
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="10,8"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Statut" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <ComboBox x:Name="StatusFilterComboBox" 
                             Height="36" 
                             FontSize="14"
                             BorderBrush="#cbd5e1"
                             BorderThickness="1">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="Ã€ Jour"/>
                        <ComboBoxItem Content="En Retard"/>
                        <ComboBoxItem Content="Critique"/>
                    </ComboBox>
                </StackPanel>

                <!-- Loan Type Filter -->
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Type de CrÃ©dit" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LoanTypeFilterComboBox" 
                             Height="36" 
                             FontSize="14"
                             BorderBrush="#cbd5e1"
                             BorderThickness="1">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="Personnel"/>
                        <ComboBoxItem Content="Commerce"/>
                        <ComboBoxItem Content="Agricole"/>
                        <ComboBoxItem Content="Ã‰ducation"/>
                        <ComboBoxItem Content="Urgence"/>
                    </ComboBox>
                </StackPanel>

                <!-- Apply Filters Button -->
                <Button Grid.Column="3" 
                       x:Name="ApplyFiltersButton"
                       Style="{StaticResource ActionButtonStyle}"
                       Content="ðŸ” Filtrer" 
                       VerticalAlignment="Bottom"
                       Padding="20,8"/>
            </Grid>
        </Border>

        <!-- Loans DataGrid -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Loading Indicator -->
                <Grid x:Name="LoadingPanel" 
                     Grid.Row="0" 
                     Background="#F8F9FA" 
                     Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Chargement des crÃ©dits actifs..." 
                                  FontSize="16" 
                                  Foreground="#64748b" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Empty State -->
                <Grid x:Name="EmptyStatePanel" 
                     Grid.Row="0" 
                     Background="White" 
                     Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Aucun crÃ©dit actif" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#1e293b" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Vous n'avez actuellement aucun prÃªt actif dans votre portefeuille." 
                                  FontSize="14" 
                                  Foreground="#64748b" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,10,0,0" 
                                  TextWrapping="Wrap" 
                                  MaxWidth="400" 
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="ActiveLoansDataGrid" 
                         Grid.Row="0"
                         AutoGenerateColumns="False" 
                         CanUserAddRows="False" 
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="None"
                         HeadersVisibility="Column"
                         Background="White"
                         BorderThickness="0"
                         RowHeight="60"
                         AlternationCount="2"
                         AlternatingRowBackground="#F8FAFC">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F1F5F9"/>
                            <Setter Property="Foreground" Value="#475569"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="15,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EFF6FF"/>
                                    <Setter Property="Foreground" Value="#1e293b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- Loan Number + Branch -->
                        <DataGridTemplateColumn Header="PrÃªt" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LoanNumber}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14" 
                                                  Foreground="#1e40af"/>
                                        <TextBlock Text="{Binding Branch}" 
                                                  FontSize="11" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Client Info + Agent -->
                        <DataGridTemplateColumn Header="Client" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CustomerName}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14" 
                                                  Foreground="#1e293b"/>
                                        <TextBlock FontSize="11" Foreground="#64748b" Margin="0,2,0,0">
                                            <Run Text="Agent: "/>
                                            <Run Text="{Binding LoanOfficer}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Loan Type + Term + Interest -->
                        <DataGridTemplateColumn Header="Type de CrÃ©dit" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LoanTypeDisplay}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"/>
                                        <TextBlock Text="{Binding InterestRateDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Principal + Processing Fee -->
                        <DataGridTemplateColumn Header="Montant" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding PrincipalAmountDisplay}" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#1e293b"/>
                                        <TextBlock Text="{Binding ProcessingFeeDisplay}" 
                                                  FontSize="10" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Monthly Payment + Fees -->
                        <DataGridTemplateColumn Header="MensualitÃ© + Frais" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding MonthlyPaymentWithFeesDisplay}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13" 
                                                  Foreground="#3b82f6"/>
                                        <TextBlock FontSize="10" Foreground="#64748b" Margin="0,2,0,0">
                                            <Run Text="Hors frais: "/>
                                            <Run Text="{Binding MonthlyPaymentDisplay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Remaining + Paid -->
                        <DataGridTemplateColumn Header="Restant" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding RemainingBalanceDisplay}" 
                                                  FontWeight="Bold" 
                                                  FontSize="13" 
                                                  Foreground="#9333ea"/>
                                        <TextBlock Text="{Binding AmountPaidDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status + Days Overdue -->
                        <DataGridTemplateColumn Header="Statut" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <Border x:Name="StatusBorder" 
                                               Style="{StaticResource StatusBadgeStyle}" 
                                               Background="#dcfce7">
                                            <TextBlock x:Name="StatusText" 
                                                      Text="{Binding StatusDisplay}" 
                                                      FontSize="11" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#166534"/>
                                        </Border>
                                        <TextBlock Text="{Binding DaysOverdueDisplay}" 
                                                  FontSize="10" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#dc2626" 
                                                  Margin="0,3,0,0"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding StatusDisplay}" Value="En Retard">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#fee2e2"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#991b1b"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatusDisplay}" Value="Critique">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#fef2f2"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#7f1d1d"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="ðŸ‘ï¸" 
                                               ToolTip="Voir DÃ©tails"
                                               Style="{StaticResource ActionButtonStyle}"
                                               Padding="8,4"
                                               FontSize="13"
                                               Tag="{Binding Id}"
                                               Click="ViewDetails_Click"/>
                                        <Button Content="" 
                                               ToolTip="Contacter Client"
                                               Style="{StaticResource ActionButtonStyle}"
                                               Padding="8,4"
                                               FontSize="13"
                                               Tag="{Binding CustomerPhone}"
                                               Click="ContactClient_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Border Grid.Row="1" 
                       BorderBrush="#E2E8F0" 
                       BorderThickness="0,1,0,0" 
                       Background="#F8FAFC" 
                       Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  VerticalAlignment="Center">
                            <Run Text="Affichage de " Foreground="#64748b"/>
                            <Run x:Name="PageInfoText" Text="0-0 sur 0" FontWeight="SemiBold" Foreground="#1e293b"/>
                            <Run Text=" prÃªts" Foreground="#64748b"/>
                        </TextBlock>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="PrevPageButton" 
                                   Content="â—€ PrÃ©cÃ©dent" 
                                   Style="{StaticResource ActionButtonStyle}"
                                   Padding="12,6"
                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="CurrentPageText" 
                                      Text="Page 1 / 1" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="#1e293b" 
                                      VerticalAlignment="Center" 
                                      Margin="10,0"/>
                            <Button x:Name="NextPageButton" 
                                   Content="Suivant â–¶" 
                                   Style="{StaticResource ActionButtonStyle}"
                                   Padding="12,6"
                                   Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
