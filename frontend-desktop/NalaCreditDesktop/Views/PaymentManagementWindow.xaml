<Window x:Class="NalaCreditDesktop.Views.PaymentManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Paiements - Succursale" Height="750" Width="1300"
        WindowStartupLocation="CenterOwner" Background="#F7F9FB"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#198754" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’µ" FontSize="22" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="Gestion des Paiements" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="BranchText" Foreground="#E6FFE6"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="âŸ³ RafraÃ®chir" Margin="0,0,8,0" Click="RefreshButton_Click"/>
                    <Button x:Name="CloseButton" Content="Fermer" Background="#6C757D" Foreground="White" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <!-- Payment History -->
            <DockPanel>
                <!-- Filters -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="PÃ©riode:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="PeriodCombo" Width="120" SelectedIndex="0" SelectionChanged="PeriodCombo_SelectionChanged">
                        <ComboBoxItem Content="Aujourd'hui" Tag="today"/>
                        <ComboBoxItem Content="7 derniers jours" Tag="week"/>
                        <ComboBoxItem Content="30 derniers jours" Tag="month"/>
                        <ComboBoxItem Content="Tout" Tag="all"/>
                    </ComboBox>

                    <TextBlock Text="Monnaie:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <ComboBox x:Name="CurrencyCombo" Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="Tous" Tag=""/>
                        <ComboBoxItem Content="HTG" Tag="HTG"/>
                        <ComboBoxItem Content="USD" Tag="USD"/>
                    </ComboBox>

                    <TextBlock Text="Rechercher:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <TextBox x:Name="SearchBox" Width="200" TextChanged="SearchBox_TextChanged"/>

                    <Button x:Name="ApplyFiltersButton" Content="Appliquer" Margin="12,0,0,0" Click="ApplyFiltersButton_Click"/>
                </StackPanel>

                <!-- Summary Cards -->
                <Grid DockPanel.Dock="Top" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="12" Margin="0,0,4,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Total Paiements" Foreground="#666" FontSize="11"/>
                            <TextBlock x:Name="TotalPaymentsText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#198754"/>
                            <TextBlock x:Name="TotalPaymentsAmountText" Text="0 HTG" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="12" Margin="4,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Paiements du Jour" Foreground="#666" FontSize="11"/>
                            <TextBlock x:Name="TodayPaymentsText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#0D6EFD"/>
                            <TextBlock x:Name="TodayPaymentsAmountText" Text="0 HTG" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="12" Margin="4,0,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Moyenne Paiement" Foreground="#666" FontSize="11"/>
                            <TextBlock x:Name="AveragePaymentText" Text="0 HTG" FontSize="20" FontWeight="Bold" Foreground="#FF8C00"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Data Grid -->
                <DataGrid x:Name="PaymentsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          MouseDoubleClick="PaymentsDataGrid_MouseDoubleClick"
                          AlternatingRowBackground="#F8F9FA" RowHeight="36" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat=dd/MM/yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="NÂ° ReÃ§u" Binding="{Binding ReceiptNumber}" Width="120"/>
                        <DataGridTextColumn Header="NÂ° PrÃªt" Binding="{Binding LoanNumber}" Width="120"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="Montant" Binding="{Binding Amount, StringFormat=N2}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#198754"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MÃ©thode" Binding="{Binding PaymentMethod}" Width="100"/>
                        <DataGridTextColumn Header="ReÃ§u Par" Binding="{Binding ReceivedBy}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸ‘ Voir" Click="ViewPaymentDetails_Click" Tag="{Binding Id}"
                                            Padding="6,2" Background="#0D6EFD" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="PrÃªt"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
