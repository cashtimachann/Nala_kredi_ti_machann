<UserControl x:Class="NalaCreditDesktop.Views.OverdueLoansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#ef4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dc2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#f59e0b"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#10b981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="âš ï¸ Retards de Paiement" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#dc2626"/>
                    <TextBlock Text="Gestion proactive des prÃªts en retard - Recouvrement" 
                              FontSize="14" 
                              Foreground="#64748b" 
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RefreshButton" 
                           Style="{StaticResource ActionButtonStyle}"
                           Content="ðŸ”„ Actualiser" 
                           Padding="15,8"
                           Margin="0,0,10,0"/>
                    <Button x:Name="ExportButton" 
                           Style="{StaticResource WarningButtonStyle}"
                           Content="ðŸ“Š Exporter" 
                           Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Alert Statistics Cards -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Overdue -->
                <Border Grid.Column="0" 
                       Background="#fef2f2" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Total Retards" 
                                  FontSize="12" 
                                  Foreground="#dc2626" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="TotalOverdueText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#b91c1c" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="TotalOverdueSubText" 
                                  Text="prÃªts en retard" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- Critical (60+ days) -->
                <Border Grid.Column="1" 
                       Background="#fef2f2" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ”´ Critique (60+j)" 
                                  FontSize="12" 
                                  Foreground="#7f1d1d" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="CriticalCountText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#7f1d1d" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="CriticalAmountText" 
                                  Text="0.00 HTG" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- Severe (31-60 days) -->
                <Border Grid.Column="2" 
                       Background="#fff7ed" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸŸ  SÃ©vÃ¨re (31-60j)" 
                                  FontSize="12" 
                                  Foreground="#ea580c" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="SevereCountText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#c2410c" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="SevereAmountText" 
                                  Text="0.00 HTG" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>

                <!-- Moderate (1-30 days) -->
                <Border Grid.Column="3" 
                       Background="#fefce8" 
                       CornerRadius="10" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸŸ¡ ModÃ©rÃ© (1-30j)" 
                                  FontSize="12" 
                                  Foreground="#ca8a04" 
                                  FontWeight="SemiBold"/>
                        <TextBlock x:Name="ModerateCountText" 
                                  Text="0" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="#a16207" 
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="ModerateAmountText" 
                                  Text="0.00 HTG" 
                                  FontSize="11" 
                                  Foreground="#64748b"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters and Search -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Rechercher" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" 
                            Height="36" 
                            Padding="10,8"
                            FontSize="14"
                            BorderBrush="#cbd5e1" 
                            BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                   BorderBrush="{TemplateBinding BorderBrush}" 
                                                   BorderThickness="{TemplateBinding BorderThickness}" 
                                                   CornerRadius="6">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="10,8"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Days Overdue Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Jours de Retard" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <ComboBox x:Name="DaysOverdueFilterComboBox" 
                             Height="36" 
                             FontSize="14"
                             BorderBrush="#cbd5e1"
                             BorderThickness="1">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="1-30 jours"/>
                        <ComboBoxItem Content="31-60 jours"/>
                        <ComboBoxItem Content="60+ jours (Critique)"/>
                    </ComboBox>
                </StackPanel>

                <!-- Sort By -->
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Trier Par" FontSize="11" Foreground="#64748b" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SortByComboBox" 
                             Height="36" 
                             FontSize="14"
                             BorderBrush="#cbd5e1"
                             BorderThickness="1">
                        <ComboBoxItem Content="Plus de retard" IsSelected="True"/>
                        <ComboBoxItem Content="Moins de retard"/>
                        <ComboBoxItem Content="Montant dÃ©croissant"/>
                        <ComboBoxItem Content="Montant croissant"/>
                    </ComboBox>
                </StackPanel>

                <!-- Apply Filters Button -->
                <Button Grid.Column="3" 
                       x:Name="ApplyFiltersButton"
                       Style="{StaticResource ActionButtonStyle}"
                       Content="ðŸ” Filtrer" 
                       VerticalAlignment="Bottom"
                       Padding="20,8"/>
            </Grid>
        </Border>

        <!-- Overdue Loans DataGrid -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Loading Indicator -->
                <Grid x:Name="LoadingPanel" 
                     Grid.Row="0" 
                     Background="#F8F9FA" 
                     Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Chargement des prÃªts en retard..." 
                                  FontSize="16" 
                                  Foreground="#64748b" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Empty State -->
                <Grid x:Name="EmptyStatePanel" 
                     Grid.Row="0" 
                     Background="White" 
                     Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="âœ…" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Aucun prÃªt en retard!" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#10b981" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Excellent! Tous vos prÃªts sont Ã  jour." 
                                  FontSize="14" 
                                  Foreground="#64748b" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,10,0,0" 
                                  TextWrapping="Wrap" 
                                  MaxWidth="400" 
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="OverdueLoansDataGrid" 
                         Grid.Row="0"
                         AutoGenerateColumns="False" 
                         CanUserAddRows="False" 
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="None"
                         HeadersVisibility="Column"
                         Background="White"
                         BorderThickness="0"
                         RowHeight="65"
                         AlternationCount="2"
                         AlternatingRowBackground="#FEF2F2">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F1F5F9"/>
                            <Setter Property="Foreground" Value="#475569"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="15,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FEF2F2"/>
                                    <Setter Property="Foreground" Value="#1e293b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- Severity Badge -->
                        <DataGridTemplateColumn Header="ðŸš¨" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="SeverityBorder" 
                                           Width="40" 
                                           Height="40" 
                                           CornerRadius="20" 
                                           Background="#fee2e2"
                                           VerticalAlignment="Center">
                                        <TextBlock x:Name="SeverityIcon" 
                                                  Text="ðŸ”´" 
                                                  FontSize="20" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding SeverityLevel}" Value="Moderate">
                                            <Setter TargetName="SeverityBorder" Property="Background" Value="#fef3c7"/>
                                            <Setter TargetName="SeverityIcon" Property="Text" Value="ðŸŸ¡"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SeverityLevel}" Value="Severe">
                                            <Setter TargetName="SeverityBorder" Property="Background" Value="#fed7aa"/>
                                            <Setter TargetName="SeverityIcon" Property="Text" Value="ðŸŸ "/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Loan Info -->
                        <DataGridTemplateColumn Header="PrÃªt" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LoanNumber}" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#1e40af"/>
                                        <TextBlock Text="{Binding DaysOverdueDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#dc2626" 
                                                  FontWeight="SemiBold"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Client Info -->
                        <DataGridTemplateColumn Header="Emprunteur" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CustomerName}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14" 
                                                  Foreground="#1e293b"/>
                                        <TextBlock Text="{Binding CustomerPhone}" 
                                                  FontSize="12" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Outstanding Amount -->
                        <DataGridTemplateColumn Header="Montant DÃ»" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding OutstandingAmountDisplay}" 
                                                  FontWeight="Bold" 
                                                  FontSize="15" 
                                                  Foreground="#dc2626"/>
                                        <TextBlock Text="{Binding PenaltyAmountDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#f97316" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Last Payment -->
                        <DataGridTemplateColumn Header="Dernier Paiement" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LastPaymentDateDisplay}" 
                                                  FontSize="13" 
                                                  Foreground="#1e293b"/>
                                        <TextBlock Text="{Binding LastPaymentAmountDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#64748b" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Contact Status -->
                        <DataGridTemplateColumn Header="Statut Contact" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LastContactDisplay}" 
                                                  FontSize="12" 
                                                  Foreground="#64748b"/>
                                        <TextBlock Text="{Binding ContactCountDisplay}" 
                                                  FontSize="11" 
                                                  Foreground="#3b82f6" 
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="*" MinWidth="240">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="ðŸ“ž" 
                                               ToolTip="Contacter Client"
                                               Style="{StaticResource WarningButtonStyle}"
                                               Padding="8,4"
                                               FontSize="14"
                                               Tag="{Binding CustomerPhone}"
                                               Click="ContactClient_Click"/>
                                        <Button Content="ðŸ’°" 
                                               ToolTip="Enregistrer Paiement"
                                               Style="{StaticResource SuccessButtonStyle}"
                                               Padding="8,4"
                                               FontSize="14"
                                               Tag="{Binding LoanId}"
                                               Click="RecordPayment_Click"/>
                                        <Button Content="ðŸ“‹" 
                                               ToolTip="Historique"
                                               Style="{StaticResource ActionButtonStyle}"
                                               Padding="8,4"
                                               FontSize="14"
                                               Tag="{Binding LoanId}"
                                               Click="ViewHistory_Click"/>
                                        <Button Content="ðŸ‘ï¸" 
                                               ToolTip="DÃ©tails"
                                               Style="{StaticResource ActionButtonStyle}"
                                               Padding="8,4"
                                               FontSize="14"
                                               Tag="{Binding LoanId}"
                                               Click="ViewDetails_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Border Grid.Row="1" 
                       BorderBrush="#E2E8F0" 
                       BorderThickness="0,1,0,0" 
                       Background="#F8FAFC" 
                       Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  VerticalAlignment="Center">
                            <Run Text="Affichage de " Foreground="#64748b"/>
                            <Run x:Name="PageInfoText" Text="0-0 sur 0" FontWeight="SemiBold" Foreground="#dc2626"/>
                            <Run Text=" prÃªts en retard" Foreground="#64748b"/>
                        </TextBlock>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="PrevPageButton" 
                                   Content="â—€ PrÃ©cÃ©dent" 
                                   Style="{StaticResource ActionButtonStyle}"
                                   Padding="12,6"
                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="CurrentPageText" 
                                      Text="Page 1 / 1" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="#1e293b" 
                                      VerticalAlignment="Center" 
                                      Margin="10,0"/>
                            <Button x:Name="NextPageButton" 
                                   Content="Suivant â–¶" 
                                   Style="{StaticResource ActionButtonStyle}"
                                   Padding="12,6"
                                   Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
