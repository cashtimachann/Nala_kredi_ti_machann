                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Type: " FontSize="12" Foreground="#64748b"/>
                                        <TextBlock x:Name="AccountTypeText" Text="--" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Solde: " FontSize="12" Foreground="#64748b"/>
                                        <TextBlock x:Name="AccountBalanceText" Text="--" FontSize="12" FontWeight="SemiBold" Foreground="#10b981"/>
