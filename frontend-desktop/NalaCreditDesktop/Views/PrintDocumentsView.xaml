                                    Padding="12" 
                                    FontSize="14"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
