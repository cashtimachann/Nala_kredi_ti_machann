                        <!-- Document Type Cards -->
                        <Border Style="{StaticResource DocumentCardStyle}" 
                                MouseLeftButtonDown="AttestationCard_Click">
                            <StackPanel>
                                <TextBlock Text="ðŸ“œ" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
