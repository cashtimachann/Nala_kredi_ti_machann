                                          FontSize="11" 
                                          Foreground="#64748b" 
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel: Document Configuration & Preview -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Configuration Section -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#20000000" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Selected Document Type -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
