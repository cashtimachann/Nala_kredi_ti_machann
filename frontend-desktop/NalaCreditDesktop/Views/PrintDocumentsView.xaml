                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ“‹ Informations du compte" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
