<Window x:Class="NalaCreditDesktop.Views.CashierTransactionReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapports de Transactions - Caissier" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4A90E2" Offset="0"/>
                        <GradientStop Color="#357ABD" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#357ABD" Offset="0"/>
                                            <GradientStop Color="#2C5AA0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="ðŸ“„ Rapport de Transactions" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="SÃ©lectionnez une pÃ©riode et gÃ©nÃ©rez votre rapport de transactions" 
                           FontSize="12" Foreground="#7F8C8D"/>
            </StackPanel>
        </Border>

        <!-- Options de rapport -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- SÃ©lection de pÃ©riode -->
                    <TextBlock Text="PÃ©riode du rapport" Style="{StaticResource LabelStyle}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                        <RadioButton x:Name="TodayRadio" Content="Aujourd'hui" 
                                   IsChecked="True" Margin="0,0,20,0" 
                                   FontSize="13" VerticalAlignment="Center"
                                   Checked="ReportPeriodChanged"/>
                        <RadioButton x:Name="CustomRangeRadio" Content="PÃ©riode personnalisÃ©e" 
                                   FontSize="13" VerticalAlignment="Center"
                                   Checked="ReportPeriodChanged"/>
                    </StackPanel>

                    <!-- SÃ©lection de dates personnalisÃ©e -->
                    <StackPanel x:Name="CustomDatePanel" Visibility="Collapsed" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Date de dÃ©but" Style="{StaticResource LabelStyle}"/>
                                <DatePicker x:Name="StartDatePicker" 
                                          FontSize="13" Height="35"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Date de fin" Style="{StaticResource LabelStyle}"/>
                                <DatePicker x:Name="EndDatePicker" 
                                          FontSize="13" Height="35"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Options d'affichage -->
                    <TextBlock Text="Options d'affichage" Style="{StaticResource LabelStyle}" Margin="0,10,0,10"/>
                    
                    <CheckBox x:Name="ShowDetailsCheckBox" Content="Afficher dÃ©tails complets" 
                            IsChecked="True" Margin="0,5" FontSize="13"/>
                    <CheckBox x:Name="GroupByCurrencyCheckBox" Content="Grouper par devise" 
                            IsChecked="False" Margin="0,5" FontSize="13"/>
                    <CheckBox x:Name="IncludeSummaryCheckBox" Content="Inclure rÃ©sumÃ© financier" 
                            IsChecked="True" Margin="0,5" FontSize="13"/>

                    <!-- AperÃ§u -->
                    <TextBlock x:Name="PreviewText" 
                             Text="Les transactions seront chargÃ©es lors de la gÃ©nÃ©ration du rapport"
                             FontSize="12" Foreground="#95A5A6" 
                             Margin="0,20,0,0" TextWrapping="Wrap"/>

                    <!-- Message de statut -->
                    <TextBlock x:Name="StatusMessage" 
                             Text="" FontSize="12" 
                             Margin="0,10,0,0" TextWrapping="Wrap"
                             Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Boutons d'action -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="ðŸ–¨ï¸ Imprimer" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="PrintButton_Click" Width="150"/>
                
                <Button Grid.Column="2" Content="ðŸ’¾ Enregistrer PDF" 
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#28A745"
                        Click="SavePdfButton_Click" Width="170"/>

                <Button Grid.Column="3" Content="âœ–ï¸ Fermer" 
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#6C757D"
                        Click="CloseButton_Click" Width="120"/>
            </Grid>
        </Border>
    </Grid>
</Window>
