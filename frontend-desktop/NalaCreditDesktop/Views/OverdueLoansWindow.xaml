<Window x:Class="NalaCreditDesktop.Views.OverdueLoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrÃ©dits En Retard - Succursale" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner" Background="#F7F9FB"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#DC3545" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš ï¸" FontSize="22" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="CrÃ©dits En Retard" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="BranchText" Foreground="#FFE6E6"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="âŸ³ RafraÃ®chir" Margin="0,0,8,0" Click="RefreshButton_Click"/>
                    <Button x:Name="CloseButton" Content="Fermer" Background="#6C757D" Foreground="White" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <DockPanel Grid.Row="1" Margin="16">
            <!-- Filters -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Monnaie:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="CurrencyCombo" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="Tous" Tag=""/>
                    <ComboBoxItem Content="HTG" Tag="HTG"/>
                    <ComboBoxItem Content="USD" Tag="USD"/>
                </ComboBox>

                <TextBlock Text="Jours de Retard:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <ComboBox x:Name="DaysOverdueCombo" Width="120" SelectedIndex="0">
                    <ComboBoxItem Content="Tous" Tag="0"/>
                    <ComboBoxItem Content="1-7 jours" Tag="1-7"/>
                    <ComboBoxItem Content="8-30 jours" Tag="8-30"/>
                    <ComboBoxItem Content="31+ jours" Tag="31"/>
                </ComboBox>

                <TextBlock Text="Rechercher:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <TextBox x:Name="SearchBox" Width="200" TextChanged="SearchBox_TextChanged"/>

                <TextBlock Text="Par page:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <ComboBox x:Name="PageSizeCombo" Width="80" SelectedIndex="1" SelectionChanged="PageSizeCombo_SelectionChanged">
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>

                <Button x:Name="ApplyFiltersButton" Content="Appliquer" Margin="12,0,0,0" Click="ApplyFiltersButton_Click"/>
            </StackPanel>
            
            <!-- Data Grid -->
            <DataGrid x:Name="LoansDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                      MouseDoubleClick="LoansDataGrid_MouseDoubleClick"
                      AlternatingRowBackground="#FFF8F8" RowHeight="36" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NÂ° PrÃªt" Binding="{Binding LoanNumber}" Width="130"/>
                    <DataGridTextColumn Header="Client" Binding="{Binding BorrowerName}" Width="*"/>
                    <DataGridTextColumn Header="Montant" Binding="{Binding PrincipalAmount, StringFormat=N0}" Width="110"/>
                    <DataGridTextColumn Header="Solde Restant" Binding="{Binding RemainingBalance, StringFormat=N0}" Width="130"/>
                    <DataGridTextColumn Header="Paiement DÃ»" Binding="{Binding MonthlyPayment, StringFormat=N0}" Width="120"/>
                    <DataGridTextColumn Header="Jours de Retard" Binding="{Binding DaysOverdue}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#DC3545"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="PÃ©nalitÃ©s" Binding="{Binding PenaltyAmount, StringFormat=N2}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FF8C00"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Agent" Binding="{Binding LoanOfficerName}" Width="*"/>
                    <DataGridTextColumn Header="TÃ©lÃ©phone" Binding="{Binding BorrowerPhone}" Width="130"/>
                    <DataGridTextColumn Header="Monnaie" Binding="{Binding Currency}" Width="80"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ‘ Voir" Click="ViewDetails_Click" Tag="{Binding Id}" 
                                        Padding="6,2" Background="#0D6EFD" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Pagination -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,8,0,0" HorizontalAlignment="Right">
                <Button x:Name="PrevPageButton" Content="â—€ PrÃ©cÃ©dent" Margin="0,0,8,0" Click="PrevPageButton_Click"/>
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center"/>
                <Button x:Name="NextPageButton" Content="Suivant â–¶" Margin="8,0,0,0" Click="NextPageButton_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
