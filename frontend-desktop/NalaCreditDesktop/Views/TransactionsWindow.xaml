<Window x:Class="NalaCreditDesktop.Views.TransactionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transactions - Historique des Paiements" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’° Historique des Transactions" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Historique complet des paiements et recouvrements de crÃ©dits" 
                       FontSize="13" 
                       Foreground="#7F8C8D" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date From Filter -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Date DÃ©but:" Style="{StaticResource FilterLabelStyle}"/>
                    <DatePicker x:Name="DateFromPicker" 
                                SelectedDateFormat="Short"
                                FontSize="13"
                                Height="32"/>
                </StackPanel>

                <!-- Date To Filter -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Date Fin:" Style="{StaticResource FilterLabelStyle}"/>
                    <DatePicker x:Name="DateToPicker" 
                                SelectedDateFormat="Short"
                                FontSize="13"
                                Height="32"/>
                </StackPanel>

                <!-- Payment Method Filter -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="MÃ©thode Paiement:" Style="{StaticResource FilterLabelStyle}"/>
                    <ComboBox x:Name="PaymentMethodComboBox" 
                              Height="32" 
                              FontSize="13">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="Cash"/>
                        <ComboBoxItem Content="Virement Bancaire"/>
                        <ComboBoxItem Content="Mobile Money"/>
                        <ComboBoxItem Content="ChÃ¨que"/>
                    </ComboBox>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Bottom"
                            Margin="10,0,0,0">
                    <Button x:Name="ApplyFiltersButton" 
                            Content="ðŸ” Filtrer" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ApplyFilters_Click"/>
                    <Button x:Name="RefreshButton" 
                            Content="ðŸ”„ Actualiser" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="Refresh_Click"/>
                    <Button x:Name="ExportButton" 
                            Content="ðŸ“Š Exporter" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#27AE60"
                            Click="Export_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transactions DataGrid -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <!-- Loading Indicator -->
                <StackPanel x:Name="LoadingPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="â³" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Chargement des transactions..." 
                               FontSize="16" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="ðŸ“­" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="Aucune transaction trouvÃ©e" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Il n'y a aucun paiement dans cette succursale pour la pÃ©riode sÃ©lectionnÃ©e" 
                               FontSize="13" 
                               Foreground="#95A5A6"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="ðŸ’¡ Essayez de modifier les dates ou cliquez sur le bouton 'RafraÃ®chir'" 
                               FontSize="12" 
                               Foreground="#BDC3C7"
                               HorizontalAlignment="Center"
                               FontStyle="Italic"
                               Margin="0,10,0,0"/> 
                               FontSize="13" 
                               Foreground="#95A5A6"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="TransactionsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserResizeRows="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8FAFC"
                          RowHeight="45"
                          FontSize="13"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" 
                                            Binding="{Binding PaymentDate}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="NÂ° PrÃªt" 
                                            Binding="{Binding LoanNumber}" 
                                            Width="130"/>
                        <DataGridTextColumn Header="Client" 
                                            Binding="{Binding BorrowerName}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Montant" 
                                            Binding="{Binding Amount}" 
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="MÃ©thode" 
                                            Binding="{Binding PaymentMethod}" 
                                            Width="140"/>
                        <DataGridTextColumn Header="RÃ©fÃ©rence" 
                                            Binding="{Binding Reference}" 
                                            Width="140"/>
                        <DataGridTextColumn Header="EnregistrÃ© Par" 
                                            Binding="{Binding RecordedBy}" 
                                            Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Statistics Summary -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,15,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Transactions -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Transactions" 
                               FontSize="12" 
                               Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TotalTransactionsText" 
                               Text="0" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"/>
                </StackPanel>

                <!-- Total Amount -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Montant Total" 
                               FontSize="12" 
                               Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TotalAmountText" 
                               Text="0 HTG" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#27AE60"/>
                </StackPanel>

                <!-- Cash Payments -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Paiements Cash" 
                               FontSize="12" 
                               Foreground="#7F8C8D"/>
                    <TextBlock x:Name="CashPaymentsText" 
                               Text="0 HTG" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#3498DB"/>
                </StackPanel>

                <!-- Mobile Money Payments -->
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Mobile Money" 
                               FontSize="12" 
                               Foreground="#7F8C8D"/>
                    <TextBlock x:Name="MobileMoneyText" 
                               Text="0 HTG" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#9B59B6"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
