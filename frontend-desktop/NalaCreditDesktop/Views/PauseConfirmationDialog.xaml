<Window x:Class="NalaCreditDesktop.Views.PauseConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation Pause Caisse" 
        Height="280" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#FF8C00" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⏸️" FontSize="24" Foreground="White" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Pause Caisse" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Verrouillage temporaire de la session" 
                               FontSize="12" 
                               Foreground="#FFE4B5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Contenu -->
        <StackPanel Grid.Row="1" Margin="30,20">
            <TextBlock Text="Êtes-vous sûr de vouloir mettre la caisse en pause?" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,15"/>
            
            <TextBlock Text="• Les opérations de dépôt, retrait et change seront temporairement désactivées"
                       FontSize="12" 
                       Margin="0,5"/>
            
            <TextBlock Text="• Vous devrez saisir votre mot de passe pour reprendre"
                       FontSize="12" 
                       Margin="0,5"/>
            
            <TextBlock Text="• Les données de session seront conservées"
                       FontSize="12" 
                       Margin="0,5"/>
            
            <TextBlock Text="• Le timer continuera de fonctionner"
                       FontSize="12" 
                       Margin="0,5"/>

            <Border Background="#FFF3CD" 
                    BorderBrush="#FFC107" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock Text="Utilisez la pause pour les pauses courtes uniquement. Pour fermer définitivement, utilisez 'Clôture'." 
                               FontSize="11" 
                               TextWrapping="Wrap"
                               Foreground="#856404"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            
            <Button x:Name="CancelButton" 
                    Content="Annuler" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Background="Transparent"
                    BorderBrush="#BDC3C7"
                    Click="CancelButton_Click"/>
            
            <Button x:Name="ConfirmButton" 
                    Content="⏸️ Mettre en Pause" 
                    Padding="20,8" 
                    Background="#FF8C00"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>