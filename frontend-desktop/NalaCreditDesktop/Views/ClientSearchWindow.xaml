<Window x:Class="NalaCreditDesktop.Views.ClientSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NalaCreditDesktop.Views"
        Title="Recherche de Client" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#f8fafc">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="HeaderButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1e293b"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e2e8f0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#3b82f6" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”" FontSize="26" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Recherche de Client" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="BranchNameText"
                                   FontSize="13" 
                                   Foreground="#bfdbfe" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" 
                            Content="ðŸ”„ Actualiser" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="RefreshButton_Click"/>
                    <Button x:Name="CloseButton" 
                            Content="âœ– Fermer" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content - SearchBorrowerView -->
        <Border Grid.Row="1" Background="White" Margin="0" x:Name="ContentBorder">
            <!-- SearchBorrowerView will be added here programmatically -->
        </Border>
    </Grid>
</Window>
