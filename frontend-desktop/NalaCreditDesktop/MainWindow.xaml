<Window x:Class="NalaCreditDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:NalaCreditDesktop.Converters"
        xmlns:views="clr-namespace:NalaCreditDesktop.Views"
        mc:Ignorable="d"
        Title="Dashboard Caissier - Nala Kredi Ti Machann" 
        Height="1000" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Convertisseurs -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
        
        <!-- Styles personnalisés -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        
        <Style x:Key="CurrencyHTGStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="Foreground" Value="#27AE60"/>
        </Style>
        
        <Style x:Key="CurrencyUSDStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
            <Setter Property="Foreground" Value="#3498DB"/>
        </Style>
        
        <Style x:Key="AlertWarningStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="BorderBrush" Value="#FFC107"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="AlertCriticalStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8D7DA"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#64748b"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e2e8f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#4f46e5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- En-tête avec actions rapides -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Titre et informations session -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Dashboard Caissier - Nala Kredi Ti Machann" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock x:Name="CashierNameText" 
                                   Text="Marie Dupont"
                                   Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text=" • " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock x:Name="SessionStartTimeText" 
                                   Text="Ouvert à 08:30" 
                                   Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock Text=" • " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock x:Name="CurrentTimeText" 
                                   Text="Maintenant: 12:45:30" 
                                   Foreground="#BDC3C7" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- Statut de session -->
                <Border Grid.Column="1" 
                        x:Name="SessionStatusBorder"
                        Background="Green" 
                        CornerRadius="20" 
                        Padding="15,8" 
                        Margin="20,0">
                    <TextBlock x:Name="SessionStatusText" 
                               Text="CAISSE OUVERTE" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                </Border>

                <!-- Actions rapides -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ExchangeOperationButton" Style="{StaticResource ActionButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Change"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="PauseCashierButton" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Background="#FF8C00">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏸️" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Pause"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="CloseCashierButton" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Background="#E74C3C">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔒" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Clôture"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="LogoutButton" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Background="#6C757D">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚪" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Déconnexion"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" Background="#f1f5f9" BorderBrush="#e2e8f0" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <TextBlock Text="NAVIGATION" 
                          FontWeight="Bold" 
                          FontSize="12" 
                          Foreground="#64748b" 
                          Margin="0,0,0,15"/>
                
                <Button x:Name="DashboardButton" 
                        Content="💼 Dashboard Caissier" 
                        Style="{StaticResource ActiveSidebarButtonStyle}"/>
                
                <Button x:Name="TransactionsButton" 
                        Content="💰 Transactions" 
                        Style="{StaticResource SidebarButtonStyle}"/>
                
                <Button x:Name="ReportsButton" 
                        Content="📈 Rapports" 
                        Style="{StaticResource SidebarButtonStyle}"/>
                
                <Button x:Name="AccountsButton" 
                        Content="👥 Comptes Clients" 
                        Style="{StaticResource SidebarButtonStyle}"/>
                
                <Separator Margin="0,15"/>
                
                <Button x:Name="ConfigButton" 
                        Content="⚙️ Configuration" 
                        Style="{StaticResource SidebarButtonStyle}"/>
                
                <Button x:Name="SupportButton" 
                        Content="📞 Support" 
                        Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal - Zone de contenu dynamique -->
        <ScrollViewer x:Name="MainContentScrollViewer" 
                      Grid.Row="1" 
                      Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="10">
            <Grid x:Name="MainDashboardGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Alertes -->
                <StackPanel Grid.Row="0" x:Name="AlertsPanel">
                    <!-- Alerte warning -->
                    <Border x:Name="WarningAlert" 
                            Style="{StaticResource AlertWarningStyle}" 
                            Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock x:Name="WarningMessage" 
                                       Text="Le solde HTG approche de la limite (>80% du seuil)" 
                                       FontWeight="SemiBold" 
                                       Foreground="#856404"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Alerte critique -->
                    <Border x:Name="CriticalAlert" 
                            Style="{StaticResource AlertCriticalStyle}" 
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚨" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock x:Name="CriticalMessage" 
                                       Text="" 
                                       FontWeight="SemiBold" 
                                       Foreground="#721C24"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Première ligne : Soldes et graphique -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Suivi soldes caisse -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="💰 Soldes de Caisse" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <!-- Soldes actuels -->
                            <Grid Margin="0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- HTG -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="HTG:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           x:Name="CurrentBalanceHTGText"
                                           Text="2,580,750" 
                                           Style="{StaticResource CurrencyHTGStyle}" 
                                           HorizontalAlignment="Right"/>

                                <!-- USD -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="USD:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           x:Name="CurrentBalanceUSDText"
                                           Text="$12,450.75" 
                                           Style="{StaticResource CurrencyUSDStyle}" 
                                           HorizontalAlignment="Right"/>

                                <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10"/>

                                <!-- Détails -->
                                <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Solde d'ouverture HTG:"/>
                                        <TextBlock Grid.Column="1" x:Name="OpeningBalanceHTGText" Text="1,500,000" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Solde d'ouverture USD:"/>
                                        <TextBlock Grid.Column="1" x:Name="OpeningBalanceUSDText" Text="$8,000.00" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total entrées:"/>
                                        <TextBlock Grid.Column="1" x:Name="TotalIncomingText" Text="1,850,000" Foreground="#27AE60" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total sorties:"/>
                                        <TextBlock Grid.Column="1" x:Name="TotalOutgoingText" Text="769,250" Foreground="#E74C3C" FontWeight="SemiBold"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Indicateur d'équilibre -->
                            <Border x:Name="BalanceIndicatorBorder" 
                                    Background="Orange" 
                                    CornerRadius="5" 
                                    Padding="10" 
                                    Margin="0,10,0,0">
                                <TextBlock x:Name="BalanceIndicatorText"
                                           Text="Caisse équilibrée" 
                                           Foreground="White" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Graphique évolution -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📈 Évolution des Soldes" Style="{StaticResource HeaderTextStyle}"/>
                            <views:OptionalPlotHost x:Name="BalanceChart" Height="300" Margin="0,10" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Deuxième ligne : Résumé transactions et statistiques -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Résumé des transactions -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊 Résumé du Jour" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dépôts -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="💵 Dépôts" FontWeight="SemiBold" Foreground="#27AE60" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="DepositsCountText" Text="Nombre: 23" FontSize="12"/>
                                    <TextBlock x:Name="DepositsAmountHTGText" Text="HTG: 1,250,000" FontSize="12"/>
                                    <TextBlock x:Name="DepositsAmountUSDText" Text="USD: $3,200" FontSize="12"/>
                                </StackPanel>

                                <!-- Retraits -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="💸 Retraits" FontWeight="SemiBold" Foreground="#E74C3C" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="WithdrawalsCountText" Text="Nombre: 18" FontSize="12"/>
                                    <TextBlock x:Name="WithdrawalsAmountHTGText" Text="HTG: 560,000" FontSize="12"/>
                                    <TextBlock x:Name="WithdrawalsAmountUSDText" Text="USD: $1,850" FontSize="12"/>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,10"/>

                            <!-- Opérations de change -->
                            <TextBlock Text="🔄 Opérations de Change" FontWeight="SemiBold" Foreground="#3498DB" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Vente USD:" FontSize="12"/>
                                    <TextBlock x:Name="UsdSalesAmountText" Text="HTG: 600,000" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Achat USD:" FontSize="12"/>
                                    <TextBlock x:Name="UsdPurchaseAmountText" Text="USD: $1,450.75" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Statistiques personnelles -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="👤 Mes Statistiques" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Clients servis:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ClientsServedText" Text="41" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Transactions traitées:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TransactionsProcessedText" Text="47" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Temps moyen/transaction:"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="AverageTransactionTimeText" Text="2m 15s" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Taux d'erreur:"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           x:Name="ErrorRateText"
                                           Text="2.1%" 
                                           FontWeight="SemiBold"
                                           Foreground="Green"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Objectif journalier:"/>
                                <ProgressBar Grid.Row="5" Grid.ColumnSpan="2" 
                                             x:Name="DailyGoalProgressBar"
                                             Value="78.5" 
                                             Maximum="100" 
                                             Height="20" 
                                             Margin="0,5"/>
                            </Grid>

                            <TextBlock x:Name="DailyGoalText"
                                       Text="Vous avez atteint 78.5% de votre objectif journalier" 
                                       HorizontalAlignment="Center" 
                                       FontSize="12" 
                                       Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Troisième ligne : Dernières transactions -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="🕒 Dernières Transactions" Style="{StaticResource HeaderTextStyle}"/>
                            <Button x:Name="RefreshTransactionsButton"
                                    HorizontalAlignment="Right" 
                                    Content="🔄 Actualiser" 
                                    Padding="10,5"
                                    Background="Transparent"
                                    BorderBrush="#BDC3C7"/>
                        </Grid>
                        
                        <DataGrid x:Name="RecentTransactionsGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  SelectionMode="Extended"
                                  ClipboardCopyMode="IncludeHeader"
                                  Height="250"
                                  Margin="0,10">
                            <DataGrid.InputBindings>
                                <KeyBinding Command="ApplicationCommands.Copy" Key="C" Modifiers="Control"/>
                                <KeyBinding Command="ApplicationCommands.SelectAll" Key="A" Modifiers="Control"/>
                            </DataGrid.InputBindings>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copier" 
                                              Command="ApplicationCommands.Copy"
                                              InputGestureText="Ctrl+C"/>
                                    <MenuItem Header="Tout sélectionner" 
                                              Command="ApplicationCommands.SelectAll"
                                              InputGestureText="Ctrl+A"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Heure" 
                                                    Binding="{Binding Time, StringFormat='{}{0:HH:mm:ss}'}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Type" 
                                                    Binding="{Binding Type}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Client/Compte" 
                                                    Binding="{Binding ClientAccount}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Montant" 
                                                    Binding="{Binding Amount}" 
                                                    Width="120"/>
                                <DataGridTemplateColumn Header="Statut" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}" 
                                                    CornerRadius="3" 
                                                    Padding="5,2">
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="White" 
                                                           FontSize="11" 
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Barre de statut -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#34495E" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="💼" Foreground="White" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock x:Name="BranchNameText" Text="Succursale Centre-Ville" Foreground="White" FontSize="14"/>
                    <TextBlock Text=" • " Foreground="#BDC3C7" FontSize="14"/>
                    <TextBlock x:Name="SessionIdText" Text="Session: CS-2025-001" Foreground="#BDC3C7" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <Ellipse x:Name="ConnectionStatusIndicator" Width="12" Height="12" Fill="LimeGreen" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ConnectionStatusText" Text="Connecté" Foreground="White" FontSize="14"/>
                </StackPanel>

                <TextBlock Grid.Column="2" 
                           x:Name="LastTransactionTimeText"
                           Text="Dernière transaction: 12:40:15" 
                           Foreground="#BDC3C7" 
                           FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>
